<?xml version="1.0" encoding="utf-8"?>
<com.hail.autoscrollbacklayoutdemo.utils.AutoScrollBackLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    app:show_scroll="true"
    tools:context=".RecyclerViewDemoActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recylcerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</com.hail.autoscrollbacklayoutdemo.utils.AutoScrollBackLayout>
